# Coolify Production Environment Variables
# Copy this file and fill in your actual values
# In Coolify: Settings > Environment Variables

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
MONGO_USERNAME=admin
MONGO_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
MONGODB_URI=mongodb://admin:CHANGE_THIS_TO_SECURE_PASSWORD@mongodb:27017/vibex?authSource=admin
REDIS_URL=redis://redis:6379

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
NODE_ENV=production
BACKEND_PORT=5000
FRONTEND_PORT=80

# Your Coolify domain URLs (update these with your actual Coolify domains)
BACKEND_URL=https://api.yourdomain.com
FRONTEND_URL=https://yourdomain.com

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# Generate these with: openssl rand -base64 32
JWT_SECRET=GENERATE_RANDOM_SECRET_HERE
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=GENERATE_ANOTHER_RANDOM_SECRET_HERE
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# AI SERVICE API KEYS
# ===========================================
OPENAI_API_KEY=sk-...
GROK_API_KEY=your-grok-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===========================================
# X (TWITTER) API CREDENTIALS
# ===========================================
# Get these from: https://developer.twitter.com/
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token

# Twitter OAuth 2.0
TWITTER_CLIENT_ID=your-twitter-oauth-client-id
TWITTER_CLIENT_SECRET=your-twitter-oauth-client-secret
TWITTER_CALLBACK_URL=https://api.yourdomain.com/api/auth/twitter/callback

# ===========================================
# AWS S3 CONFIGURATION (for media storage)
# ===========================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vibex-media-prod

# ===========================================
# EMAIL SERVICE (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# FEATURE FLAGS
# ===========================================
ENABLE_AI_WRITER=true
ENABLE_SCHEDULER=true
ENABLE_ANALYTICS=true
ENABLE_CHROME_EXTENSION=true
